<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Produtos</title>
  <link rel="stylesheet" href="/css/listaprodutos.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
</head>
<body>
  <%- include('../partial/header1.ejs') %>
  <main>
    <!-- Sidebar -->
    <%- include('../partial/sidebar.ejs') %>

    <!-- Conteúdo -->
    <section class="content">
      
      <!-- Botão voltar -->
      <nav class="back-navigation" aria-label="Navegação de retorno">
    <button class="back-button" onclick="history.back()" aria-label="Voltar à página anterior">
      <i class='bx bx-arrow-back'></i>
      <span>Voltar</span>
    </button>
  </nav>

      <!-- Botão novo produto -->
      <a href="/cadastrar_produto" class="btn btn-success mb-4">Novo Produto</a>

      <!-- Lista de produtos -->
      <section class="produtos-grid">

        <!-- Produto 1 -->
        <article class="produto-card">
          <figure>
            <img src="/imagem/cana.png" alt="Produto">
          </figure>
          <section class="produto-info">
            <h3>Bagaço de Cana</h3>
            <p class="endereco">Rua das Flores, 123 - São Paulo</p>
            <p class="preco">R$ 1500,00</p>
            <p class="quantidade">20 Tonelada(s)</p>
          </section>
          <section class="acoes">
            <button class="btn btn-warning btn-sm">Editar</button>
            
           
           <button class="btn btn-danger btn-sm btn-excluir">Excluir</button>
          </section>
        </article>

        <!-- Exemplo de outro produto -->
        <article class="produto-card">
          <figure>
            <img src="/imagem/serragem.png" alt="Produto">
          </figure>
          <section class="produto-info">
            <h3>Serragem</h3>
            <p class="endereco">Rua Joaquim dos Santos Andrade, 49 - São Paulo</p>
            <p class="preco">R$ 250,00</p>
            <p class="quantidade">1 Tonelada(s)</p>
          </section>
          <section class="acoes">
            <button class="btn btn-warning btn-sm">Editar</button>
            
            
            <button class="btn btn-danger btn-sm btn-excluir">Excluir</button>
          </section>
        </article>


        <article class="produto-card">
          <figure>
            <img src="/imagem/palhademilho.png" alt="Produto">
          </figure>
          <section class="produto-info">
            <h3>Palha de Milho</h3>
            <p class="endereco">Rua Alcides Bezerra, 48 - São Paulo</p>
            <p class="preco">R$ 440,00</p>
            <p class="quantidade">2 Tonelada(s)</p>
          </section>
          <section class="acoes">
            <button class="btn btn-warning btn-sm">Editar</button>
            

            <button class="btn btn-danger btn-sm btn-excluir">Excluir</button>
          </section>
        </article>


        <article class="produto-card">
          <figure>
            <img src="/imagem/cascadearroz.png" alt="Produto">
          </figure>
          <section class="produto-info">
            <h3>Casca de Arroz</h3>
            <p class="endereco">Rua do Carmo, 81 - São Paulo</p>
            <p class="preco">R$ 1275,00</p>
            <p class="quantidade">1 Tonelada(s)</p>
          </section>
          <section class="acoes">
            <button class="btn btn-warning btn-sm">Editar</button>
            
          
            <button class="btn btn-danger btn-sm btn-excluir">Excluir</button>
          </section>
        </article>

        <article class="produto-card">
          <figure>
            <img src="/imagem/lixo organico.png" alt="Produto">
          </figure>
          <section class="produto-info">
            <h3>Lixo Orgânico</h3>
            <p class="endereco">Rua Silveira Martins, 53 - São Paulo</p>
            <p class="preco">R$ 900,00</p>
            <p class="quantidade">2 Tonelada(s)</p>
          </section>
          <section class="acoes">
            <button class="btn btn-warning btn-sm">Editar</button>
            
           
           <button class="btn btn-danger btn-sm btn-excluir">Excluir</button>
          </section>
        </article>

        <article class="produto-card">
          <figure>
            <img src="/imagem/pellets.png" alt="Produto">
          </figure>
          <section class="produto-info">
            <h3>Pallets</h3>
            <p class="endereco">Rua Vinícius de Morais - São Paulo</p>
            <p class="preco">R$ 2000,00</p>
            <p class="quantidade">2 Tonelada(s)</p>
          </section>
          <section class="acoes">
            <button class="btn btn-warning btn-sm">Editar</button>
            
            
           <button class="btn btn-danger btn-sm btn-excluir">Excluir</button>
          </section>
        </article>

      </section>
    </section>

  </main>
  
  <!-- Modal de Edição -->
  <section class="modal fade" id="editarModal" tabindex="-1" aria-labelledby="editarModalLabel" aria-hidden="true">
    <section class="modal-dialog modal-dialog-centered">
      <section class="modal-content">
        <section class="modal-header">
          <h5 class="modal-title" id="editarModalLabel">Editar Produto</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
        </section>
        <section class="modal-body">
          <form id="formEditarProduto" novalidate>
            <nav class="mb-3 form-group-validation">
              <label for="editarNome" class="form-label">Nome do Produto</label>
              <input type="text" class="form-control" id="editarNome" required>
              <span class="error-message" id="errorNome"></span>
            </nav>
            <nav class="mb-3 form-group-validation">
              <label for="editarEndereco" class="form-label">Endereço</label>
              <input type="text" class="form-control" id="editarEndereco" required>
              <span class="error-message" id="errorEndereco"></span>
            </nav>
            <nav class="mb-3 form-group-validation">
              <label for="editarPreco" class="form-label">Preço (R$)</label>
              <input type="text" class="form-control" id="editarPreco" required placeholder="Ex: 1500,00">
              <span class="error-message" id="errorPreco"></span>
            </nav>
            <nav class="mb-3 form-group-validation">
              <label for="editarQuantidade" class="form-label">Quantidade</label>
              <input type="text" class="form-control" id="editarQuantidade" required placeholder="Ex: 20 Tonelada(s)">
              <span class="error-message" id="errorQuantidade"></span>
            </nav>
          </form>
        </section>
        <section class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="button" class="btn btn-primary" id="salvarEdicaoBtn" disabled>Salvar Alterações</button>
        </section>
      </section>
    </section>
  </section>


<section class="modal fade" id="excluirModal" tabindex="-1" aria-labelledby="excluirModalLabel" aria-hidden="true">
  <section class="modal-dialog modal-dialog-centered">
    <section class="modal-content">
      <section class="modal-header">
        <h5 class="modal-title" id="excluirModalLabel">Confirmar Exclusão</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
      </section>
      <section class="modal-body">
        Tem certeza que deseja excluir este produto?
      </section>
      <section class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-danger" id="confirmarExcluirBtn">Excluir</button>
      </section>
    </section>
  </section>
</section>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Script de validação e funcionalidades -->
<script src="/js/listaprodutos.js"></script>

<%- include('../partial/footer.ejs') %>
</body>
</html>

